<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appmak="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbffee"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="hello world"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/zoro" />

    <com.atozmak.circleandroundimageviewdemo.widgets.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/zoro" />

    <com.atozmak.circleandroundimageviewdemo.widgets.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/zoro"
        appmak:ovalRadius="10dp"
        appmak:type="oval" />

    <com.atozmak.circleandroundimageviewdemo.widgets.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/lufi"
        appmak:ovalRadius="40dp"
        appmak:type="oval" />
</LinearLayout>