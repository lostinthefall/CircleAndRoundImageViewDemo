<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appmak="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.atozmak.circleandroundimageviewdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8d8d8d"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="hello world"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/zoro" />

        <com.atozmak.circleandroundimageviewdemo.RoundImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/zoro" />

        <com.atozmak.circleandroundimageviewdemo.RoundImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/zoro"
            appmak:ovalRadius="10dp"
            appmak:type="oval" />

        <com.atozmak.circleandroundimageviewdemo.RoundImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/zoro"
            appmak:ovalRadius="40dp"
            appmak:type="oval" />
    </LinearLayout>
</ScrollView>
